<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cybertech.cliniccare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <application
        android:name=".ClinicCare"
        android:allowBackup="true"
        android:icon="@drawable/stethoscope"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="Clinic care"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".Register"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".StudentDetails"
            android:label="Student Details"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".TimeLines"
            android:label="Medical Histories" />
        <activity android:name=".NewTimeLine" />
        <activity
            android:name=".WorkersProfile"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".SearchKey"
            android:label="Settings" />
        <activity
            android:name=".AddStudent"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".Student_Login"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".Student_Home"
            android:label="@string/title_activity_student__home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OneTimePage"
            android:theme="@style/AppThemeNoBar" />
        <activity android:name=".BookAppointment" />
        <activity
            android:name=".ViewAppointment"
            android:theme="@style/AppThemeNoBar" />
        <activity android:name=".ViewStudentRecords" />
        <activity
            android:name=".MyAppointments"
            android:theme="@style/AppThemeNoBar" />
        <activity android:name=".SetAppointmentTime" />
        <activity android:name=".NotificationIntent"></activity>
    </application>

</manifest>